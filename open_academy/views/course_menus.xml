<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">open_academy.course</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_user_courses': 1}"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first course
            </p>
        </field>
    </record>

    <menuitem id="courses_menu" name="Courses" parent="open_academy_menu" sequence="10" action="course_action"/>
</odoo>
