<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record model="ir.actions.act_window" id="course_tree_action">
            <field name="name">Courses</field>
            <field name="res_model">open_academy.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="session_graph_action">
            <field name="name">Sessions</field>
            <field name="res_model">open_academy.session</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="open_academy.open_academy_session_graph"/>
        </record>

        <record model="ir.actions.act_window" id="session_calendar_action">
            <field name="name">Sessions</field>
            <field name="res_model">open_academy.session</field>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="open_academy.open_academy_session_calendar"/>
        </record>

        <record model="ir.ui.view" id="dashboard_form_view">
            <field name="name">Dashboard Form</field>
            <field name="model">board.board</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Dashboard">
                    <board style="1-2">
                        <column>
                            <action string="Courses Tree" name="%(course_tree_action)d"/>
                            <action string="Session Graph" name="%(open_academy.session_graph_action)d"/>
                        </column>
                        <column>
                            <action string="Session Calendar" name="%(open_academy.session_calendar_action)d"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="dashboard_action">
            <field name="name">Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="dashboard_form_view"/>
        </record>
    </data>

    <data>
        <menuitem name="Dashboard" id="dashboard_menu" parent="main_open_academy_menu" sequence="10"
                  action="dashboard_action"/>

    </data>
</odoo>