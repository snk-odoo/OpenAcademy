<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="open_academy_course_tree">
      <field name="name">open_academy.course.tree</field>
      <field name="model">open_academy.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="responsible_id"/>
          <field name="cost"/>
          <field name="const_bonus"/>
          <field name="random_bonus"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_course_form">
      <field name="name">open_academy.course.form</field>
      <field name="model">open_academy.course</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="responsible_id"/>
              </group>
              <group>
                <field name="cost"/>
                <field name="const_bonus"/>
                <field name="random_bonus"/>
              </group>
            </group>
            <notebook>
              <page string="Description">
                <group>
                  <field name="description" nolabel="1"/>
                </group>
              </page>
              <page string="Sessions">
                <group>
                  <field name="session_list" nolabel="1"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_course_search">
      <field name="name">open_academy.course.search</field>
      <field name="model">open_academy.course</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
          <field name="cost"/>
          <field name="description"/>
          <filter name="user_courses" string="User Courses" domain="[('responsible_id', '=', uid)]"/>
          <group string="Group By">
            <filter name="group_by_user" string="User" context="{'group_by': 'responsible_id'}"/>
          </group>
        </search>
      </field>
    </record>


    <record model="ir.ui.view" id="open_academy_session_tree">
      <field name="name">open_academy.session.tree</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <tree decoration-info="duration&lt;5" decoration-danger="duration&gt;15">
        <!--tree decoration-info="duration&lt;5" decoration-danger="duration&gt;15" editable="top"-->
          <field name="name"/>
          <field name="start_date"/>
          <field name="duration"/>
          <field name="seats"/>
          <field name="taken_seats" widget="progressbar"/>
          <field name="course_id"/>
          <field name="instructor_id"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_session_calendar">
      <field name="name">open_academy.session.calendar</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <calendar string="Sessions" date_start="start_date" color="instructor_id">
          <field name="name"/>
        </calendar>
      </field>
    </record>

    <!--
    Presumably implementation.
    This can only be verified on the Enterprise Edition.
    <record model="ir.ui.view" id="open_academy_session_gantt">
      <field name="name">open_academy.session.gantt</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <gantt string="Sessions"
               date_start="start_date"
               date_stop="stop_date"
               progress="progress"
               default_group_by="instructor_id"/>
      </field>
    </record>
    -->

    <record model="ir.ui.view" id="open_academy_session_graph">
      <field name="name">open_academy.session.graph</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <graph string="Sessions">
          <field name="instructor_id"/>
          <field name="seats" type="measure"/>
        </graph>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_session_kanban">
      <field name="name">open_academy.session.kanban</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <kanban string="Sessions" default_group_by="course_id">
          <field name="color"/>
          <templates>
              <t t-name="kanban-box">
                  <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                      <div class="o_dropdown_kanban dropdown">
                          <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                              <span class="fa fa-ellipsis-v"/>
                          </a>
                          <div class="dropdown-menu" role="menu">
                              <t t-if="widget.editable">
                                  <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                              </t>
                              <t t-if="widget.deletable">
                                  <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                              </t>
                              <div role="separator" class="dropdown-divider"/>
                              <ul class="oe_kanban_colorpicker" data-field="color"/>
                          </div>
                      </div>
                      <div t-attf-class="oe_kanban_content">
                        <p>Session Name: <field name="name"/></p>
                        <p>Start Date: <field name="start_date"/></p>
                        <p>Duration in day: <field name="duration"/></p>
                      </div>
                      <div class="oe_clear"></div>
                  </div>
              </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_session_form">
      <field name="name">open_academy.session.form</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="Main">
                <group>
                  <group>
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="instructor_id"/>
                    <field name="active"/>
                  </group>
                  <group>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="end_date"/>
                    <field name="seats"/>
                    <field name="taken_seats" widget="progressbar"/>
                  </group>
                </group>
              </page>
              <page string="Attendees">
                <group>
                  <field name="attendees_list" nolabel="1"/>
                  <!--field name="instructor_list" widget="many2many_tags" nolabel="1"/-->
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_session_search">
      <field name="name">open_academy.session.search</field>
      <field name="model">open_academy.session</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="open_academy_wizard_form">
      <field name="name">open_academy.wizard.form</field>
      <field name="model">open_academy.wizard</field>
      <field name="arch" type="xml">
        <form string="Add Attendees">
          <group>
            <field name="session_list"/>
            <!--field name="session_id"/-->
            <field name="attendees_list"/>
          </group>
          <footer>
            <button name="subscribe" type="object" string="Subscribe" class="oe_highlight"/>
            <button special="cancel" string="Cancel"/>
          </footer>
        </form>
      </field>
    </record>

