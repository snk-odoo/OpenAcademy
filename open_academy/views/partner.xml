<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record model="ir.ui.view" id="open_academy_partner_tree">
            <field name="name">open_academy.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="instructor" invisible="1"/>
                    <field name="category" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="open_academy_partner_form">
            <field name="name">open_academy.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="instructor"/>
                    <field name="category"/>
                    <field name="session_list"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="partner_list_action">
          <field name="name">Partners</field>
          <field name="res_model">res.partner</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create the first partner
            </p>
          </field>
        </record>

        <menuitem name="Partners" id="partners_menu" parent="open_academy_menu" sequence="30"
                  action="partner_list_action"/>
    </data>
</odoo>